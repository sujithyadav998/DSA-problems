class Solution
{
    public:
    //Function to find position of first set bit in the given number.
    #include <bits/stdc++.h> 
int getRightMostSetBit(int n)
{
    
    return log2(n & -n) + 1;

    
}
    unsigned int getFirstSetBit(int n)
    {
        // Your code here
        if(n == 0)
        return 0 ; 
       return getRightMostSetBit( n);
    }
};
